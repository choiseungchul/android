<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bg"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="6dp" >

            <com.returndays.customview.TextViewNanumGothic
                android:id="@+id/top_sub_title_text"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/app_nm"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_btns"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/go_reward_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/reward_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="42dp"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/go_my_scratch_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/scratch_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>