<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" 
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="잠금화면 광고 시간"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lock_ad_min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0시"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lock_ad_max"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="24시"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lock_ad_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="수발신 광고 시간"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/callend_ad_min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0시"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/callend_ad_max"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="24시"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/callend_ad_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>