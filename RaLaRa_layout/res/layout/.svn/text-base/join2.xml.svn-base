<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/black" >

            <TextView
                android:id="@+id/join_title"
                style="@style/app_title_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/member_join" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@color/gray_5"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:weightSum="6" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/agreement_contents1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_type_dark"
                        android:padding="10dp"
                        android:text="@string/join_contents1"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/agree_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/checkbox_custom"
                        android:drawablePadding="10dp"
                        android:text="@string/agree_btn"
                        android:textColor="@color/gray_3"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                     <Button
                        android:id="@+id/agreement_contents2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_type_dark"
                        android:padding="10dp"
                        android:text="@string/join_contents2"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                 
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/agree_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/checkbox_custom"
                        android:drawablePadding="10dp"
                        android:text="@string/agree_btn"
                        android:textColor="@color/gray_3"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                 >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
					
                     <Button
                        android:id="@+id/agreement_contents3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gray"
                        android:padding="10dp"
                        android:text="@string/join_contents3"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                    
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/agree_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginTop="5dp"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/checkbox_custom"
