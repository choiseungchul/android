<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center_vertical" 
    android:padding="12dp"
    android:background="@color/white">
    
    <com.example.android.bitmapfun.ui.RecyclingImageView 
        android:id="@+id/rank_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/rank_num"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="@color/gray_default"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    
    <com.example.android.bitmapfun.ui.RecyclingImageView 
        android:id="@+id/rank_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/man_ico"
        android:layout_marginRight="14dp"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/rank_usernick"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="로딩중.."
            android:gravity="center_vertical"
            />
        
        <TextView 
            android:id="@+id/rank_point"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="@color/purple"
            android:text="로딩중..."
            android:gravity="center_vertical"
            android:textSize="14dp"/>
        
    </LinearLayout>

</LinearLayout>
