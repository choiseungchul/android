<?xml version="1.0" encoding="utf-8"?>

<!-- 탭 메뉴 -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/tab_bg"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <LinearLayout 
                android:id="@+id/tab1_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_item"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/tab1_image"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tab1_off"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_item"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.example.android.bitmapfun.ui.RecyclingImageView
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="@drawable/divide"
                android:src="@drawable/divide" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                 android:id="@+id/tab2_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_item"
                android:gravity="center"
                android:orientation="vertical" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/tab2_image"
                    android:layout_width="29dp"
                    android:layout_height="25dp"
                    android:src="@drawable/tab2_off"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_item"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.example.android.bitmapfun.ui.RecyclingImageView
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="@drawable/divide"
                android:src="@drawable/divide" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                 android:id="@+id/tab3_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_item"
                android:gravity="center"
                android:orientation="vertical" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/tab3_image"
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:src="@drawable/tab3_off"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_item"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.example.android.bitmapfun.ui.RecyclingImageView
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:background="@drawable/divide"
                android:src="@drawable/divide" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            >

            <LinearLayout
                 android:id="@+id/tab4_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_item"
                android:gravity="center"
                android:orientation="vertical" 
                >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/tab4_image"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/tab4_off"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>