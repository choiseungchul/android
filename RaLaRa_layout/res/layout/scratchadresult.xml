<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/top_basic" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/img_scrach_ad_result"
                android:layout_width="270dp"
                android:layout_height="339dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:orientation="vertical" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/img_scratch_ad_real_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>