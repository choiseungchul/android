<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title_chk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/adlist_gubun"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Title"
            android:textColor="@color/yellow"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_msg_chk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="false"
            android:text="msg"
            android:textColor="#8a8a8a"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/dialog_check"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/dialog_check_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="5dp" 
                android:text="check"
                android:textColor="#8a8a8a"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/adlist_cont" >

            <Button
                android:id="@+id/dialog_leftbtn_chk"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="0dp"
                android:text="확인"
                android:textSize="15dp" />

            <Button
                android:id="@+id/dialog_rightbtn_chk"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="5"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="0dp"
                android:text="취소"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>