<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical" 
    
    >

    <LinearLayout
        android:id="@+id/mypage_gubun"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:visibility="invisible" 
        android:background="@color/adlist_cont_bg">

        <TextView
            android:id="@+id/mypage_gubun_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/adlist_gugun_bar"
            android:paddingLeft="7dp"
            android:paddingTop="6dp"
            android:text="광고 구분"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

       	<TextView 
       	    android:id="@+id/mypage_list_tit"
       	    android:layout_width="0dp"
       	    android:layout_height="30dp"
       	    android:textSize="15dp"
       	    android:layout_weight="8"
       	    android:gravity="center_vertical"
       	    android:textColor="@color/black"/>
       	
       	<CheckBox 
       	    android:id="@+id/mypage_list_check"
       	    android:layout_width="0dp"
       	    android:layout_height="30dp"
       	    android:layout_weight="2"
       	    android:visibility="gone"
       	    android:gravity="center_vertical"
       	    />
       	<TextView 
       	    android:id="@+id/mypage_list_count"
       	    android:layout_width="0dp"
       	    android:layout_height="30dp"
       	    android:layout_weight="2"
       	    android:textColor="@color/purple"
       	    android:text="로딩중..."
       	    android:textSize="15dp"
       	    android:gravity="center_vertical|right"
       	    />
        
    </LinearLayout>

</LinearLayout>