<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/top_basic" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/scrach_view_result"
                android:layout_width="270dp"
                android:layout_height="339dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:layout_marginBottom="30dp"
                android:background="@drawable/winner_result_bg"
                android:orientation="vertical" >

                <com.example.android.bitmapfun.ui.RecyclingImageView
                    android:id="@+id/img_scratch_win_real_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom|center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_mywinlist"
                    style="@style/app_btns_type4"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_purple"
                    android:text="당첨내역확인"
                    android:textAlignment="center" 
                    
                    />

                <Button
                    android:id="@+id/btn_mypage"
                    style="@style/app_btns_type4"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_purple"
                    android:text="배송지입력하기"
                    android:textAlignment="center" 
                    android:visibility="gone"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>