<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/top_simple" />

        <com.returndays.customview.MWebView
            android:id="@+id/webviewControl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|right"
        android:padding="10dp">
        
        <com.example.android.bitmapfun.ui.RecyclingImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/callend_egg"
            android:id="@+id/btn_callend_egg"
            android:visibility="invisible"
            />
    </LinearLayout>

</FrameLayout>