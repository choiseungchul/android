<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" >

        <TextView
            android:id="@+id/login_title"
            style="@style/app_title_bar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/login_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/login_title"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="15dp" >

            <EditText
                android:id="@+id/login_idinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_bg"
                android:hint="@string/login_id_hint"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" >
            </EditText>

            <EditText
                android:id="@+id/login_passinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:hint="@string/login_pass_hint"
                android:ems="12"
                android:maxLength="12"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <CheckBox
                android:id="@+id/login_setAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10sp"
                android:button="@android:color/transparent"
                android:drawableLeft="@drawable/checkbox_custom"
                android:drawablePadding="10dp"
                android:text="@string/login_setauto"
                android:textColor="@color/gray_3"
                android:textSize="17dp" />

            <Button
                android:id="@+id/login_btn"
                style="@style/app_btns_type1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/button_type_purple"
                android:text="@string/login_btn"
                android:textAlignment="center" />

            <Button
                android:id="@+id/join_btn"
                style="@style/app_btns_type1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/button_type_purple"
                android:text="@string/join_btn"
                android:textAlignment="center" />
            
            <Button
                android:id="@+id/find_id_btn"
                style="@style/app_btns_type1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/button_type_dark"
                android:text="@string/find_id_btn"
                android:textAlignment="center" />
            
            <Button
                android:id="@+id/find_pass_btn"
                style="@style/app_btns_type1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/button_type_dark"
                android:text="@string/find_pass_btn"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>