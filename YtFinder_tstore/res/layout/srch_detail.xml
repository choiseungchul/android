<?xml version="1.0" encoding="utf-8"?>
<!-- 상세검색 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srch_detail_layer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_gravity="right"    
    android:background="@drawable/list_bg"
    android:orientation="vertical" >

    <!-- 국가 선택 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_1" />

        <TextView
            android:id="@+id/srch_select_nation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:gravity="center"
            android:text="@string/srch_select_nation_btn"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- 카테고리 선택 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_1_1" />

        <TextView
            android:id="@+id/srch_select_cate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:gravity="center"
            android:text="@string/srch_select_cate_btn"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- 업로드 날짜 선택 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/srch_select_start_date"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:text="@string/srch_select_start_time"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/srch_select_end_date"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:text="@string/srch_select_end_time"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- 업로더 검색 -->

