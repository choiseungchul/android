    <!-- 영상 시간 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:id="@+id/srch_select_duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:text="@string/srch_select_duration_default"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- 이름 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <EditText
                android:id="@+id/srch_select_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg"
                android:gravity="center_vertical"
                android:hint="@string/srch_select_query"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- 정렬 방식 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_rb"
            android:gravity="center_horizontal"
            android:text="@string/srch_select_title_6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/order_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_1" />

                <RadioButton
                    android:id="@+id/order_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_2" />

                <RadioButton
                    android:id="@+id/order_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/order_type_4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_4" />

                <RadioButton
                    android:id="@+id/order_type_5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_5" />
                
                <RadioButton
                    android:id="@+id/order_type_6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/srch_select_order_6" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/srch_detail_start"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/button_white"
        android:gravity="center"
        android:text="@string/srch_select_start_btn"
        android:textColor="@color/black" />

</LinearLayout>