    <LinearLayout
        android:id="@+id/get_search_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <com.mcproject.net.customview.RecyclingImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/srch_detail_off" />

        <TextView
            android:id="@+id/play_type_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/player_btn_text3_2"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/download_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <com.mcproject.net.customview.RecyclingImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/download_btn" />

        <TextView
            android:id="@+id/play_type_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/player_btn_text4"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>