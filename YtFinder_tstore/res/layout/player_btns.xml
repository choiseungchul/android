<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/play_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <com.mcproject.net.customview.RecyclingImageView
            android:id="@+id/play_type_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/repeat_off" />

        <TextView
            android:id="@+id/play_type_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/player_btn_text1"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <com.mcproject.net.customview.RecyclingImageView
            android:id="@+id/share_btn_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share_icon" />

        <TextView
            android:id="@+id/play_type_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/player_btn_text5"
            android:textSize="12dp" />
    </LinearLayout>
    
