<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top"
        android:orientation="vertical" >

        <com.momsfree.net.customview.TextViewNanumGothic
            android:id="@+id/input_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="알림"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_skyblue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <com.momsfree.net.customview.TextViewNanumGothic
            android:id="@+id/input_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/input_dialog_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="16dp" 
                android:padding="10dp"/>

            <com.momsfree.net.customview.TextViewNanumGothic
                android:id="@+id/input_dialog_addr_srch"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_blue" 
                android:text="@string/search"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <com.momsfree.net.customview.TextViewNanumGothic
                android:id="@+id/input_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_blue"
                android:gravity="center"
                android:text="입력"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <com.momsfree.net.customview.TextViewNanumGothic
                android:id="@+id/input_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:gravity="center"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>